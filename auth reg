<?php
$host = 'localhost';
$user = 'root';
$pass = ''; // В OS Panel пароль обычно пустой
$dbname = 'borisov3'; // Название БД по вашему запросу

$conn = mysqli_connect($host, $user, $pass, $dbname);

if (!$conn) {
    die("Ошибка подключения: " . mysqli_connect_error());
}
?>







<?php
require_once('db.php');

if (isset($_POST['register'])) {
    $login = $_POST['login'];
    $mail = $_POST['mail'];
    $pass = $_POST['pass'];
    
    // Простая вставка данных в таблицу reg
    $query = "INSERT INTO `reg` (login, mail, pass) VALUES ('$login', '$mail', '$pass')";
    if (mysqli_query($conn, $query)) {
        echo "<script>alert('Регистрация завершена!'); location.href='auto.php';</script>";
    }
}
?>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <title>Регистрация</title>
</head>
<body>
    <header><h1>МОЯ СЕМЬЯ - МОЙ КОСМОС</h1></header>
    <nav>
        <a href="index.php">ГЛАВНАЯ</a>
        <a href="auto.php">АВТОРИЗАЦИЯ</a>
    </nav>
    <div class="main_panel">
        <form method="post" action="reg.php">
            <input type="text" name="login" placeholder="Придумайте логин" required>
            <input type="email" name="mail" placeholder="Ваша почта" required>
            <input type="password" name="pass" placeholder="Пароль" required>
            <input type="submit" name="register" value="Зарегистрироваться">
        </form>
    </div>
</body>
</html>




<?php
session_start();
require_once('db.php');

if (isset($_POST['login_btn'])) {
    $login = $_POST['login'];
    $pass = $_POST['pass'];
    
    // Поиск пользователя в таблице reg
    $query = "SELECT * FROM `reg` WHERE login='$login' AND pass='$pass'";
    $result = mysqli_query($conn, $query);
    
    if (mysqli_num_rows($result) > 0) {
        $user = mysqli_fetch_assoc($result);
        $_SESSION['login'] = $user['login'];
        $_SESSION['status'] = 1; // Установка статуса авторизации
        header("Location: index.php");
    } else {
        echo "<script>alert('Данные введены неверно');</script>";
    }
}
?>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <title>Вход</title>
</head>
<body>
    <header><h1>ВХОД В СИСТЕМУ</h1></header>
    <nav>
        <a href="index.php">ГЛАВНАЯ</a>
        <a href="reg.php">РЕГИСТРАЦИЯ</a>
    </nav>
    <div class="main_panel">
        <form method="post" action="auto.php">
            <input type="text" name="login" placeholder="Логин" required>
            <input type="password" name="pass" placeholder="Пароль" required>
            <input type="submit" name="login_btn" value="Войти">
        </form>
    </div>
</body>
</html>
