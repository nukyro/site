-- Создаем базу данных borisov3
CREATE DATABASE IF NOT EXISTS `borisov3` 
DEFAULT CHARACTER SET utf8mb4 
COLLATE utf8mb4_unicode_ci;

USE `borisov3`;

-- Создаем таблицу reg (пользователи)
CREATE TABLE IF NOT EXISTS `reg` (
  `id` INT(11) NOT NULL AUTO_INCREMENT,
  `login` VARCHAR(100) NOT NULL,
  `mail` VARCHAR(100) NOT NULL,
  `pass` VARCHAR(100) NOT NULL,
  `name` VARCHAR(100) DEFAULT NULL,
  `surname` VARCHAR(100) DEFAULT NULL,
  `patronymic` VARCHAR(100) DEFAULT NULL,
  `img` VARCHAR(255) DEFAULT 'default.png',
  `status` INT(1) DEFAULT '0', -- 0 для обычных юзеров, 1 для админа
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_unicode_ci;

-- Добавляем тестового аккаунта (пароль: 123)
INSERT INTO `reg` (`login`, `mail`, `pass`, `name`, `status`) 
VALUES ('admin', 'admin@mail.ru', '123', 'Администратор', 1);
